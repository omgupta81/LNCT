<% layout("/layouts/boilerplate") -%>

<!-- <h3>All Listings</h3> -->
<!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->


<div
  class="row row-cols-xxl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 mt-3"
>

  <% for(let company of allcompany) { %>
  <div class="card listing-card col">
    <a href="/listings/<%= company._id %>" class="listing-link">
      <img
        src="<%= company.image %>"
        class="card-img-top"
        alt="listing image"
        style="height: 14rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= company.name %> </b><br />
          &#8377; <%= company.package %> 
          <%= company.description %><br />
         <br/><%= company.students %> 
        </p>
      </div>
    </a>
  </div>
  <% } %>
</div>
